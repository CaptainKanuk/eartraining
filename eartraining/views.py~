from eartraining.forms import RegisterForm

def add_user(request):
    context = RequestContext(request)

    if request.method == 'POST':
        form = RegisterForm(request.POST)

        if form.is_valid():
            form.save(commit=True)

            return index(request)
        else:
            print form.errors

    else: 
        form = RegisterForm()

    return render_to_response('/signin.html', {'form': form}, context)

